    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/father_linear_layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll0"
        android:padding="12dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:textColor="#F50057"
            android:background="#ffffff"
            android:id="@+id/textViewName"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_gravity="center" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/ll1"
    android:layout_below="@id/ll0"
    android:padding="12dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="0"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/ratingBar"
        android:layout_alignParentStart="true"
        android:layout_gravity="center" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll2"
        android:padding="12dp"
        android:layout_below="@id/ll1"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_address"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:textColor="#3F51B5"
            android:background="#ffffff"
            android:id="@+id/textViewAddress"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_distance"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:textColor="#FF80AB"
            android:background="#ffffff"
            android:id="@+id/textViewDistance"
            android:textStyle="bold"
            android:layout_alignParentStart="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll3"
        android:padding="12dp"
        android:layout_below="@id/ll2"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_seats"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingStart="4dp"
            android:text=""
            android:textColor="#3F81B5"
            android:background="#ffffff"
            android:id="@+id/textViewTablesNumber"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll4"
        android:padding="12dp"
        android:layout_below="@id/ll3"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_street_view_maps"
            android:id="@+id/button_get_street_view"
            />
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button_get_info"
            android:src="@mipmap/ic_info"
            />
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_directions"
            android:id="@+id/button_get_directions"
            />
    </LinearLayout>


    </RelativeLayout>