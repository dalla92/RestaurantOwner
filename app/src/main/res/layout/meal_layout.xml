<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingRight="4dp"
    android:paddingLeft="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/meal_image"
            android:src="@mipmap/ic_launcher"
            android:padding="7dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_primary_24dp"
            android:onClick="myClickHandler_edit"
            android:id="@+id/meal_edit" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/meal_name"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_primary_24dp"
            android:onClick="myClickHandler_remove"
            android:id="@+id/meal_delete" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/ic_money_prymary"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/meal_price"
            android:paddingTop="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meal_type1"
            android:paddingEnd="7dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meal_type2"
            android:paddingEnd="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="15sp"
                android:layout_gravity="end"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textOn="@string/availability"
                android:textOff="NO"
                android:id="@+id/meal_availability"
                android:singleLine="false"
                android:splitTrack="false"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:checked="false"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>