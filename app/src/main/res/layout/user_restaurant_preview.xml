<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/imageViewRes"
            android:src="@drawable/no_image"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:text="Name"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/imageViewRes"
            android:background="@drawable/background_res_preview"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView1"
                android:src="@drawable/ic_calendar_white_24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textViewPriceRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingStart="4dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_above="@+id/textViewReservationNumber"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textViewDistance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingEnd="4dp"
                android:text="@string/distance"
                android:gravity="end"
                android:textColor="#FFFFFF"
                android:id="@+id/textViewDistance"
                android:layout_above="@+id/textViewRating"
                android:layout_alignEnd="@+id/textViewRating" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingEnd="4dp"
                android:text="@string/rating"
                android:gravity="end"
                android:textColor="#FFFFFF"
                android:id="@+id/textViewRating"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingStart="25dp"
                android:text="@string/number_reservations"
                android:textColor="#FFFFFF"
                android:id="@+id/textViewReservationNumber"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_star"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_place_24dp"
                android:layout_alignBottom="@+id/textViewDistance"
                android:layout_toEndOf="@+id/textViewRating" />
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>