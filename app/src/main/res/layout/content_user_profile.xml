<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".user.UserProfile"
    tools:showIn="@layout/activity_user_profile">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageView" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView"
                    android:id="@+id/row1"
                    android:weightSum="2"
                    android:padding="5dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/button_take_photo"
                        android:id="@+id/button_take_photo"
                        android:layout_weight="1"
                        android:lines="2" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/button_choose_photo"
                        android:layout_weight="1"
                        android:id="@+id/button_choose_photo" />

                </LinearLayout>

        <RelativeLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout android:layout_height="wrap_content" android:orientation="horizontal"
                android:id="@+id/email_layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/profile_email"
                    android:paddingRight="7dp"
                    android:id="@+id/textView7" />

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email"
                android:hint="..." />
            </LinearLayout>

            <LinearLayout android:layout_height="wrap_content" android:orientation="horizontal"
                android:id="@+id/password_layout"
                android:layout_below="@id/email_layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/profile_password"
                    android:paddingRight="7dp"
                    android:id="@+id/textView8" />

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/password"
                android:hint="..." />
            </LinearLayout>

            <LinearLayout android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_below="@id/password_layout"
                android:id="@+id/first_name_layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/profile_first_name"
                    android:paddingRight="7dp"
                    android:id="@+id/textView21" />

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/first_name"
                android:hint="..." />
            </LinearLayout>

            <LinearLayout android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_below="@id/first_name_layout"
                android:id="@+id/last_name_layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/profile_last_name"
                    android:paddingRight="7dp"
                    android:id="@+id/textView22" />

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/last_name"
                android:hint="..." />
            </LinearLayout>

            <LinearLayout android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_below="@id/last_name_layout"
                android:id="@+id/phone_number_layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/profile_phone_number"
                    android:paddingRight="7dp"
                    android:id="@+id/textView23" />

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/phone_number"
                android:hint="..." />
            </LinearLayout>

            <LinearLayout android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_below="@id/phone_number_layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/profile_vat_number"
                    android:paddingRight="7dp"
                    android:id="@+id/textView24" />

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/vat_number"
                android:hint="..." />
            </LinearLayout>

        </RelativeLayout>

        </LinearLayout>
</ScrollView>