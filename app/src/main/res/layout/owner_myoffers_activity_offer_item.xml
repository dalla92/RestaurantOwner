<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:clickable="true"
                android:onClick="openOfferDatails"
                android:id="@+id/offer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OfferName"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="20sp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/offer_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/owner_myoffers_lable_disable"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>


        <ImageView
            android:src="@android:drawable/ic_menu_edit"
            android:id="@+id/edit_offer"
            android:clickable="true"
            android:onClick="editOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp" />

        <!-- renderla visibility GONE -->
        <LinearLayout
            android:id="@+id/offer_details"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>