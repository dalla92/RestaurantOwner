<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingRight="4dp"
    android:paddingLeft="4dp">

    <android.support.v7.widget.CardView
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_meal"
        android:onClick="myClickHandler_expand"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutxy"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/meal_image"
                    android:padding="7dp" />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_edit"
                    android:id="@+id/meal_edit"
                    android:onClick="myClickHandler_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/meal_name"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_remove"
                    android:id="@+id/meal_delete"
                    android:onClick="myClickHandler_remove" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/layoutxy"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:src="@mipmap/money_icon"
                    android:layout_gravity="bottom|left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/meal_price"
                    android:paddingTop="15dp"
                    android:layout_gravity="bottom|left" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/meal_type1"
                    android:layout_gravity="center"
                    android:src="@mipmap/image_preview_black"
                    android:paddingRight="7dp"
                    android:layout_weight="0.1" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/meal_type2"
                    android:layout_gravity="center"
                    android:src="@mipmap/image_preview_black"
                    android:paddingRight="10dp"
                    android:layout_weight="0.1" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/availability"
                    android:textOff="NO"
                    android:id="@+id/meal_availability"
                    android:showText="false"
                    android:singleLine="false"
                    android:splitTrack="false"
                    android:textStyle="bold"
                    android:checked="false"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.8" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>